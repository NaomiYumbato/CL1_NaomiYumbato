<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATRICULA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="14sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI"
        app:layout_constraintTop_toBottomOf="@+id/lblTitulo"
        android:layout_margin="10sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lblDni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="05sp"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALUMNO"
        app:layout_constraintTop_toBottomOf="@+id/inputDni"
        android:layout_margin="10sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputAlumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lblAlumno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="05sp"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblCarrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARRERA"
        app:layout_constraintTop_toBottomOf="@+id/inputAlumno"
        android:layout_margin="10sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/tvCarreras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lblCarrera"
        android:layout_margin="05sp"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDescuento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCUENTO"
        app:layout_constraintTop_toBottomOf="@+id/tvCarreras"
        android:layout_margin="10sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <android.widget.RadioGroup
        android:id="@+id/groupDescuentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lblDescuento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbDescuento1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5%"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbDescuento2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbDescuento3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12%"/>
    </android.widget.RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULAR"
        app:layout_constraintTop_toBottomOf="@+id/groupDescuentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30sp"
        android:layout_marginVertical="10sp"
        android:background="@color/black"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONTO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCalcular"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblPension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PENSION:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblMonto"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginVertical="05sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDesc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESC.1:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblPension"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginVertical="05sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDesc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESC.2:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblDesc1"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginVertical="05sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDescTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="T.DESC:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblDesc2"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginVertical="05sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblDescTotal"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="15sp"
        android:layout_marginVertical="05sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnImprimir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMPRIMIR"
        app:layout_constraintTop_toBottomOf="@+id/lblTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30sp"
        android:layout_marginVertical="10sp"
        android:background="@color/black"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>